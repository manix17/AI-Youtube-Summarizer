{
  "manifest_version": 3,
  "name": "AI YouTube Summarizer",
  "version": "1.0",
  "description": "Summarizes YouTube videos using AI by reading the transcript.",
  "permissions": ["activeTab", "scripting", "storage", "clipboardWrite"],
  "options_page": "options.html",
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "https://api.openai.com/",
    "https://api.anthropic.com/",
    "https://openrouter.ai/"
  ],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_title": "Summarize YouTube Video",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch?v=*"],
      "js": ["content.bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/injector.js",
        "assets/css/summary.css",
        "assets/md_rendering_test.json",
        "assets/prompts.json",
        "assets/supported_languages.json"
      ],
      "matches": ["*://www.youtube.com/*"]
    }
  ]
}
